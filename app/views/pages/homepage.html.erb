<%# <h2 id="cities_env">Cities / Environment</h2> %>

<div class="first unit_wrap">
  <div class="unit_toprule"></div>
  <div class="first unit">
    <h3>Least <%= link_to 'Toxins', list_path("Least Toxins") %>:</h3>
    <div class="subwrap">
      <%= link_to image_tag('homepage/homepg_least_toxins.jpg', :alt => 'least toxins'),
               list_path("Least Toxins") %>
      <ol>
        <% @least_toxins.each do |fr| %>
          <li><%= link_to fr.city.location, location_path(fr.city.location) %></li>
        <% end %>
        <li><%= link_to 'Explore More &raquo;', list_path("Least Toxins") %></li>
      </ol>
    </div>
    <div class="source">Source: <%= @toxins_factoid.source %></div>
