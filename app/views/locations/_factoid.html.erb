<li>
  <span class="bullet"></span>
  <%= factoid.render_sentence(@location) %>
  <% if factoid.radius.to_f == 0%>
	  <span class="subtext">(within <%= @location.radius %> mi.)</span>
  <% elsif factoid.radius.to_f == 100 %>	  
  	  <span class="subtext">(in your county.)</span>
  <% else factoid.radius.to_f == 50 %>	  
  	  <span class="subtext">(in your town.)</span>
  <% end %>  
</li>
